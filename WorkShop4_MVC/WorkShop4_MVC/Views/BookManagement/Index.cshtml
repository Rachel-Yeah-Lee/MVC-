@model WorkShop4_MVC.Models.SearchBookStatusArg
@{
    ViewBag.Title = "Index";
}

<h2>查詢畫面</h2>
@using (Html.BeginForm("Index", "BookManagement", FormMethod.Post, new { id = "SearchArg" }))
{
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model =>model.BookName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BookName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BookClass, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.BookClass, (List<SelectListItem>)ViewBag.BookClass, "", new { @class = "form-control" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.BookKeeper, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.BookKeeper, (List<SelectListItem>)ViewBag.BookKeeper, "", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.BookStatus, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.BookStatus, (List<SelectListItem>)ViewBag.BookStatus, "", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
            </div>
            <div class="col-md-10">
                <input type="submit" value="查詢" />
                @Html.ActionLink("add", "AddBook")
                @Html.ActionLink("清除", "Index")
            </div>
        </div>
        @if (ViewBag.SearchResult!=null) {
        <table class="table table-bordered table-striped">
            <thead>
                <tr id="searchResult">
                    <th>圖書類別</th>
                    <th>書名</th>
                    <th>購書日期</th>
                    <th>借閱狀態</th>
                    <th>借閱人</th>
                    <td></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in (List<WorkShop4_MVC.Models.SearchBookStatusResult>)ViewBag.SearchResult)
                {
                    //string BookName;
                    @*@(string.IsNullOrEmpty(item.BookName) ? BookName = " " : BookName = item.BookName);*@
                    <tr id='@item.BookId'>
                    <td>@item.BookClass</td>
                    @*<td><a class="@item.BookId" >@item.BookName</a></td>*@
                    <td>@Html.ActionLink((string.IsNullOrEmpty(item.BookName) ? " " : item.BookName), "Detail", new { BookId = @item.BookId })</td>
                    <td>@item.BoughtDate</td>
                    <td>@item.BookStatus</td>
                    <td>@item.BookKeeper</td>
                    <td>@Html.ActionLink("修改", "UpdateEmployee", new { id = item.BookId, @value = @item.BookId })</td>
                    <td>
                        <a class="btnDelete" href="#" ;">刪除</a>
                        <input class="hidEmployeeId" type="hidden" value='@item.BookId' />
                    </td>
                </tr>
                }
            </tbody>
        </table>
        }
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        //$(".lookDetail").click(function (e) {
        //    e.preventDefault();
        //    var tr = this.closest("tr");
        //    $.ajax({
        //        type: "POST",
        //        url: "/BookManagement/lookDetail",
        //        data: "BookId=" + tr.id,
        //        dataType: "json",
        //    })
        //    location.href = '~/BookManagement/lookDetail.cshtml'
        //});
        $(".btnDelete").click(function (e) {
            e.preventDefault();
            if (confirm("是否刪除")) {
                var tr = this.closest("tr");
                $.ajax({
                    type: "POST",
                    url: "/BookManagement/deleteBookData",
                    data: "BookId=" + $(this).next().val(),
                    dataType: "json",
                    success: function (response) {
                        if (response == true) {
                            $(tr).remove();
                            alert("刪除成功")
                        } else {
                            alert("無法刪除")
                        }
                       
                    }, error: function (error) {
                        alert("系統錯誤");
                    }
                });
                return false;
            }
           
           
        });
    })
    
</script>



